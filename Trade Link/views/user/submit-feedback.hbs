<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Submit Feedback - ConstractiveEdge</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }

        .feedback-container {
            max-width: 800px;
            margin: 0 auto;
            background: white;
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
            padding: 40px;
            animation: slideUp 0.5s ease;
        }

        @keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .payment-badge {
            background: linear-gradient(135deg, #48bb78 0%, #38a169 100%);
            color: white;
            padding: 15px 25px;
            border-radius: 12px;
            text-align: center;
            margin-bottom: 30px;
            font-weight: 600;
        }

        .payment-badge::before {
            content: '‚úì ';
            font-size: 20px;
        }

        .feedback-header {
            text-align: center;
            margin-bottom: 30px;
        }

        .feedback-header h1 {
            color: #667eea;
            font-size: 32px;
            font-weight: 700;
            margin-bottom: 10px;
        }

        .feedback-header p {
            color: #666;
            font-size: 14px;
        }

        .worker-banner {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 20px;
            border-radius: 15px;
            margin-bottom: 30px;
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .worker-avatar {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            background: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
            font-weight: 700;
            color: #667eea;
        }

        .worker-info h3 {
            font-size: 20px;
            margin-bottom: 5px;
        }

        .worker-info p {
            font-size: 14px;
            opacity: 0.9;
        }

        .form-group {
            margin-bottom: 25px;
        }

        .form-group label {
            display: block;
            margin-bottom: 10px;
            color: #333;
            font-weight: 600;
            font-size: 14px;
        }

        .rating-container {
            display: flex;
            align-items: center;
            gap: 20px;
            margin-bottom: 10px;
        }

        .stars {
            display: flex;
            gap: 10px;
        }

        .star {
            font-size: 36px;
            cursor: pointer;
            transition: all 0.2s ease;
            color: #ddd;
        }

        .star:hover,
        .star.active {
            color: #ffd700;
            transform: scale(1.2);
        }

        .rating-text {
            font-size: 18px;
            font-weight: 600;
            color: #667eea;
        }

        textarea {
            width: 100%;
            min-height: 120px;
            padding: 15px;
            border: 2px solid #e0e0e0;
            border-radius: 12px;
            font-family: 'Poppins', sans-serif;
            font-size: 14px;
            resize: vertical;
            transition: border-color 0.3s ease;
        }

        textarea:focus {
            outline: none;
            border-color: #667eea;
        }

        .char-counter {
            text-align: right;
            font-size: 12px;
            color: #999;
            margin-top: 5px;
        }

        .image-upload-section {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 12px;
            margin-bottom: 25px;
        }

        .upload-title {
            font-size: 14px;
            font-weight: 600;
            color: #333;
            margin-bottom: 15px;
        }

        .upload-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 15px;
        }

        .upload-box {
            position: relative;
            aspect-ratio: 1;
            border: 2px dashed #ccc;
            border-radius: 12px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s ease;
            background: white;
        }

        .upload-box:hover {
            border-color: #667eea;
            background: #f0f4ff;
        }

        .upload-box input[type="file"] {
            position: absolute;
            width: 100%;
            height: 100%;
            opacity: 0;
            cursor: pointer;
        }

        .upload-icon {
            font-size: 32px;
            margin-bottom: 5px;
            color: #999;
        }

        .upload-text {
            font-size: 12px;
            color: #999;
            text-align: center;
        }

        .file-name {
            font-size: 11px;
            color: #667eea;
            margin-top: 5px;
            text-align: center;
            max-width: 100%;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
            padding: 0 5px;
        }

        .submit-btn {
            width: 100%;
            padding: 15px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            border-radius: 12px;
            font-size: 16px;
            font-weight: 600;
            font-family: 'Poppins', sans-serif;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .submit-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 30px rgba(102, 126, 234, 0.4);
        }

        .submit-btn:active {
            transform: translateY(0);
        }

        .back-link {
            display: block;
            text-align: center;
            margin-top: 20px;
            color: #667eea;
            text-decoration: none;
            font-size: 14px;
            font-weight: 600;
        }

        .back-link:hover {
            text-decoration: underline;
        }

        @media (max-width: 768px) {
            .feedback-container {
                padding: 25px;
            }

            .feedback-header h1 {
                font-size: 24px;
            }

            .upload-grid {
                grid-template-columns: 1fr;
            }

            .rating-container {
                flex-direction: column;
                align-items: flex-start;
            }

            .stars {
                gap: 5px;
            }

            .star {
                font-size: 28px;
            }
        }
    </style>
</head>
<body>
    <div class="feedback-container">
        <div class="payment-badge">
            Payment Completed Successfully
        </div>

        <div class="feedback-header">
            <h1>‚≠ê Submit Feedback</h1>
            <p>Share your experience with the worker</p>
        </div>

        <div class="worker-banner">
            <div class="worker-avatar">
                {{#if worker.name}}
                    {{substring worker.name 0 1}}
                {{else}}
                    W
                {{/if}}
            </div>
            <div class="worker-info">
                <h3>{{worker.name}}</h3>
                <p>{{worker.profession}} ‚Ä¢ {{worker.district}}</p>
            </div>
        </div>

        <form id="feedbackForm" action="/feedback?wkid={{worker.wkid}}" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label>Rating</label>
                <div class="rating-container">
                    <div class="stars" id="starRating">
                        <span class="star" data-rating="1">‚òÖ</span>
                        <span class="star" data-rating="2">‚òÖ</span>
                        <span class="star" data-rating="3">‚òÖ</span>
                        <span class="star" data-rating="4">‚òÖ</span>
                        <span class="star" data-rating="5">‚òÖ</span>
                    </div>
                    <div class="rating-text" id="ratingText">Select Rating</div>
                </div>
                <input type="hidden" name="star" id="ratingValue" value="5" required>
            </div>

            <div class="form-group">
                <label>Your Feedback</label>
                <textarea name="feedback" id="feedbackText" placeholder="Share your experience with this worker..." required></textarea>
                <div class="char-counter">
                    <span id="charCount">0</span> / 500 characters
                </div>
            </div>

            <div class="image-upload-section">
                <div class="upload-title">üì∏ Upload Work Photos (Optional)</div>
                <div class="upload-grid">
                    <div class="upload-box">
                        <input type="file" name="img1" id="img1" accept="image/*">
                        <div class="upload-icon">üì∑</div>
                        <div class="upload-text">Photo 1</div>
                        <div class="file-name" id="fileName1"></div>
                    </div>
                    <div class="upload-box">
                        <input type="file" name="img2" id="img2" accept="image/*">
                        <div class="upload-icon">üì∑</div>
                        <div class="upload-text">Photo 2</div>
                        <div class="file-name" id="fileName2"></div>
                    </div>
                    <div class="upload-box">
                        <input type="file" name="img3" id="img3" accept="image/*">
                        <div class="upload-icon">üì∑</div>
                        <div class="upload-text">Photo 3</div>
                        <div class="file-name" id="fileName3"></div>
                    </div>
                </div>
            </div>

            <button type="submit" class="submit-btn">Submit Feedback</button>
        </form>

        <a href="/activities" class="back-link">‚Üê Back to Activities</a>
    </div>

    <script>
        // Star rating functionality
        const stars = document.querySelectorAll('.star');
        const ratingValue = document.getElementById('ratingValue');
        const ratingText = document.getElementById('ratingText');
        let selectedRating = 5;

        const ratingTexts = {
            1: 'Poor',
            2: 'Fair',
            3: 'Good',
            4: 'Very Good',
            5: 'Excellent'
        };

        // Set default rating to 5 stars
        updateStars(5);

        stars.forEach(star => {
            star.addEventListener('click', function() {
                selectedRating = parseInt(this.dataset.rating);
                updateStars(selectedRating);
            });

            star.addEventListener('mouseenter', function() {
                const hoverRating = parseInt(this.dataset.rating);
                updateStars(hoverRating);
            });
        });

        document.getElementById('starRating').addEventListener('mouseleave', function() {
            updateStars(selectedRating);
        });

        function updateStars(rating) {
            stars.forEach((star, index) => {
                if (index < rating) {
                    star.classList.add('active');
                } else {
                    star.classList.remove('active');
                }
            });
            ratingValue.value = rating;
            ratingText.textContent = ratingTexts[rating];
        }

        // Character counter
        const feedbackText = document.getElementById('feedbackText');
        const charCount = document.getElementById('charCount');

        feedbackText.addEventListener('input', function() {
            const length = this.value.length;
            charCount.textContent = length;
            
            if (length > 500) {
                this.value = this.value.substring(0, 500);
                charCount.textContent = 500;
            }
        });

        // File upload display
        ['img1', 'img2', 'img3'].forEach((id, index) => {
            document.getElementById(id).addEventListener('change', function() {
                const fileName = this.files[0]?.name || '';
                document.getElementById(`fileName${index + 1}`).textContent = fileName;
            });
        });

        // Form validation
        document.getElementById('feedbackForm').addEventListener('submit', function(e) {
            const feedback = feedbackText.value.trim();
            
            if (feedback.length < 10) {
                e.preventDefault();
                alert('Please provide at least 10 characters of feedback');
                return;
            }

            if (!selectedRating) {
                e.preventDefault();
                alert('Please select a rating');
                return;
            }
        });
    </script>
</body>
</html>