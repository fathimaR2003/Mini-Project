<div class="roothd">
    <div class="logo">
        <a href="/"> <img src="/design/logotradelink2.png" alt="Trade-Link Logo" style="width: 140px;"></a>
    </div>

    <!-- Hamburger Menu Icon -->
    <div class="menu-toggle" onclick="toggleMenu()">☰</div>

    <div class="sessions" onmouseleave="hideMenu()">
        {{#if fuser}}
        <div class="menu-links">
            <a class="nav-link" href="/services">Services</a>
            <a class="nav-link" href="/requests">Requests</a>
            <a class="nav-link" href="/confirm">Confirmation</a>
            <a class="nav-link" href="/activities">Activities</a>
            <a class="nav-link" href="/history">History</a>
            <a class="nav-link" href="/complaints">Complaints</a>
            <a class="nav-link" href="/pricing">Pricing</a>
        </div>
        {{/if}}

        <div class="auth">
            {{#if fuser}}
            <div class="auth-links">
                <a class="dropdown-item text-dark" style="font-weight: 800;" href="#">{{fuser.name}}</a>
                <a class="dropdown-item text-dark" style="font-weight: 800;" href="#">|</a>
                <a class="dropdown-item text-dark" style="font-weight: 800;" href="/logout">Logout</a>
            </div>
            {{else}}
            <div class="auth-links">
                <a class="dropdown-item text-dark" style="font-weight: 800;" href="/login">Login</a>
                <a class="dropdown-item text-dark" style="font-weight: 800;" href="#">|</a>
                <a class="dropdown-item text-dark" style="font-weight: 800;" href="/signup">Signup</a>
            </div>
            {{/if}}
        </div>
    </div>
</div>

<style>
    /* Navbar Styling */
    .roothd {
        display: flex;
        flex-wrap: wrap;
        padding: 10px;
        align-items: center;
        justify-content: space-evenly; /* ✅ Updated */
        background: transparent;
        z-index: 2;
        position: fixed;
        width: 100%;
        text-align: center;
        z-index: 5;
    }

    .menu-toggle {
        display: none;
        font-size: 24px;
        cursor: pointer;
    }

    .sessions {
        display: flex;
        gap: 15px;
        align-items: center;
        justify-content: space-evenly; /* ✅ Ensures even spacing */
        width: 80%;
    }

    .menu-links {
        display: flex;
        gap: 15px;
    }

    .auth .auth-links {
        display: flex;
        gap: 10px;
    }

    .nav-link {
        font-size: 15px;
        color: rgb(73, 73, 73);
    }

    /* Responsive Design */
    @media screen and (max-width: 768px) {
        .sessions {
            display: none;
            flex-direction: column;
            width: 100%;
            position: absolute;
            top: 58px;
            left: 0;
            background: rgba(255, 255, 255, 0.95);
            text-align: center;
            padding: 15px 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease-in-out;
        }

        .sessions.active {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            width: 100%;
        }

        .menu-links {
            flex-direction: column;
            gap: 10px;
        }

        .auth-links {
            flex-direction: column;
            gap: 5px;
        }

        .menu-toggle {
            display: block;
        }
    }

    a {
        font-family: 'Poppins', sans-serif;
    }
</style>

<script>
    function toggleMenu() {
        document.querySelector('.sessions').classList.toggle('active');
    }

    function hideMenu() {
        document.querySelector('.sessions').classList.remove('active');
    }
</script>
