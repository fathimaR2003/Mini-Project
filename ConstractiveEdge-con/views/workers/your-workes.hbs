    let img = document.createElement("img"); // Create an image element
    img.src = "/design/emty.gif"; // Set the image source
    img.alt = "Description"; // Add alternative text
    img.style.width = "900px"; // Set width (optional)
    img.style.width = "900px";

    document.getElementById("myDiv").appendChild(img); // Append to div

</script>
{{/if}}