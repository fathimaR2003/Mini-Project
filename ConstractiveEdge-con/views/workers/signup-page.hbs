<div id="signup" class="container-fluid p-5">
    <form class="p-5 mt-5" style="box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;border-radius: 12px;"
        action="/workers/signup" method="post" enctype="multipart/form-data" id="wksignupform">
        <h1 class="text-center" style="font-weight: 800; color: rgb(38, 38, 37);"><b>Create Your Account</b>
        </h1>
        <div class="form-group" style="display: flex;gap: 12px;">
            <div>
                <label for="exampleInputEmail1">Enter Name</label>
                <input name="name" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                    placeholder="Name">
            </div>
            <div>
                <label class="" for="exampleInputEmail1">Email address</label>
                <input name="email" type="email" class="form-control" id="exampleInputEmail1"
