{{>admin-header}}

<div class="admin-complaints-container">
    <div class="admin-complaints-wrapper">
        <div class="header-section">
            <h1>Complaint Management</h1>
            <div class="stats">
                <span class="stat-badge">Total: {{complaints.length}}</span>
            </div>
        </div>

        {{#if complaints}}
        <div class="complaints-list">
            {{#each complaints}}
            <div class="complaint-item">
                <div class="complaint-main">
                    <div class="complaint-info">
                        <div class="info-header">
                            <h3>{{this.subject}}</h3>
                            <span class="status-badge status-{{this.status}}">{{this.status}}</span>
                        </div>

                        <div class="user-worker-info">
                            <div class="info-block user-block">
                                <strong>User Information</strong>
                                <div class="detail-item">
                                    <span class="detail-label">Name:</span>
                                    <span class="detail-value">{{this.userDetails.name}}</span>
                                </div>
                                <div class="detail-item">
                                    <span class="detail-label">Email:</span>
                                    <span class="detail-value">{{this.userDetails.email}}</span>
                                </div>
                                {{#if this.userDetails.phone}}
                                <div class="detail-item">
                                    <span class="detail-label">Phone:</span>
                                    <span class="detail-value">{{this.userDetails.phone}}</span>
                                </div>
                                {{/if}}
                            </div>
                            <div class="info-block worker-block">
                                <strong>Worker Information</strong>
                                <div class="detail-item">
                                    <span class="detail-label">Name:</span>
                                    <span class="detail-value">{{this.workerDetails.name}}</span>
                                </div>

                                 <div class="detail-item">
                                    <span class="detail-label">Profession</span>
                                    <span class="detail-value">{{this.workerDetails.wrktype}}</span>
                                </div>
 

                                {{!<div class="detail-item">
                                    <span class="detail-label">Type:</span>
                                    <span class="detail-value">
                                        <span class="worker-type-tag">{{this.workerType}}{{!</span>
                                    </span>
                                </div>}}
                                {{#if this.workerDetails.phone}}
                                <div class="detail-item">
                                    <span class="detail-label">Phone:</span>
                                    <span class="detail-value">{{this.workerDetails.phone}}</span>
                                </div>
                                {{/if}}
                                {{#if this.workerDetails.location}}
                                <div class="detail-item">
                                    <span class="detail-label">Location:</span>
                                    <span class="detail-value">{{this.workerDetails.location}}</span>
                                </div>
                                {{/if}}
                            </div>
                        </div>

                        <div class="complaint-text">
                            <strong>Complaint Details:</strong>
                            <p>{{this.complaint}}</p>
                        </div>

                        <div class="timestamps">
                            <span><strong>Submitted:</strong> {{this.createdAt}}</span>
                            {{#if this.resolvedAt}}
                            <span><strong>Resolved:</strong> {{this.resolvedAt}}</span>
                            {{/if}}
                        </div>

                        {{#if this.adminResponse}}
                        <div class="current-response">
                            <strong>Current Response:</strong>
                            <p>{{this.adminResponse}}</p>
                        </div>
                        {{/if}}
                    </div>

                    <div class="complaint-actions">
                        <button class="btn-respond" onclick="toggleResponse('{{this._id}}')">
                            {{#if this.adminResponse}}Update Response{{else}}Respond{{/if}}
                        </button>
                        <button class="btn-delete" onclick="deleteComplaint('{{this._id}}')">Delete</button>
                    </div>
                </div>

                <div class="response-form" id="response-{{this._id}}" style="display: none;">
                    <form action="/admin/update-complaint" method="POST">
                        <input type="hidden" name="complaintId" value="{{this._id}}">
                        
                        <div class="form-group">
                            <label for="status-{{this._id}}">Status:</label>
                            <select name="status" id="status-{{this._id}}" required>
                                <option value="pending" {{#if (eq this.status 'pending')}}selected{{/if}}>Pending</option>
                                <option value="in-progress" {{#if (eq this.status 'in-progress')}}selected{{/if}}>In Progress</option>
                                <option value="resolved" {{#if (eq this.status 'resolved')}}selected{{/if}}>Resolved</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="response-{{this._id}}">Admin Response:</label>
                            <textarea name="adminResponse" id="response-{{this._id}}" rows="4" required>{{this.adminResponse}}</textarea>
                        </div>

                        <div class="form-actions">
                            <button type="submit" class="btn-save">Save Response</button>
                            <button type="button" class="btn-cancel" onclick="toggleResponse('{{this._id}}')">Cancel</button>
                        </div>
                    </form>
                </div>
            </div>
            {{/each}}
        </div>
        {{else}}
        <div class="empty-state">
            <h3>No Complaints</h3>
            <p>There are currently no complaints to review.</p>
        </div>
        {{/if}}
    </div>
</div>

<style>
    body {
        font-family: 'Poppins', sans-serif;
        margin: 0;
        padding: 0;
    }

    .admin-complaints-container {
        min-height: 100vh;
        background-image: url(/design/bg_img.png);
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
        padding: 100px 20px 40px;
    }

    .admin-complaints-wrapper {
        max-width: 1400px;
        margin: 0 auto;
    }

    .header-section {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
        background: white;
        padding: 25px 30px;
        border-radius: 12px;
        box-shadow: rgba(0, 0, 0, 0.1) 0px 4px 12px;
    }

    .header-section h1 {
        margin: 0;
        color: #4d74ea;
        font-size: 28px;
        font-weight: 700;
    }

    .stats {
        display: flex;
        gap: 10px;
    }

    .stat-badge {
        background-color: #4d74ea;
        color: white;
        padding: 8px 16px;
        border-radius: 20px;
        font-size: 14px;
        font-weight: 600;
    }

    .complaints-list {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .complaint-item {
        background: white;
        border-radius: 12px;
        box-shadow: rgba(0, 0, 0, 0.1) 0px 4px 12px;
        overflow: hidden;
    }

    .complaint-main {
        display: flex;
        justify-content: space-between;
        padding: 25px;
        gap: 20px;
    }

    .complaint-info {
        flex: 1;
    }

    .info-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 20px;
    }

    .info-header h3 {
        margin: 0;
        color: #333;
        font-size: 20px;
        font-weight: 600;
        flex: 1;
    }

    .status-badge {
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
        text-transform: uppercase;
        white-space: nowrap;
    }

    .status-pending {
        background-color: #fff3cd;
        color: #856404;
    }

    .status-in-progress {
        background-color: #cfe2ff;
        color: #084298;
    }

    .status-resolved {
        background-color: #d1e7dd;
        color: #0f5132;
    }

    .user-worker-info {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px;
        margin-bottom: 20px;
    }

    .info-block {
        background-color: #f8f9fa;
        border-radius: 8px;
        padding: 15px;
        border-left: 4px solid #4d74ea;
    }

    .info-block.user-block {
        border-left-color: #28a745;
    }

    .info-block.worker-block {
        border-left-color: #4d74ea;
    }

    .info-block strong {
        display: block;
        color: #4d74ea;
        font-size: 13px;
        margin-bottom: 12px;
        text-transform: uppercase;
        font-weight: 700;
        letter-spacing: 0.5px;
    }

    .info-block.user-block strong {
        color: #28a745;
    }

    .detail-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 8px 0;
        border-bottom: 1px solid #e9ecef;
    }

    .detail-item:last-child {
        border-bottom: none;
        padding-bottom: 0;
    }

    .detail-item:first-child {
        padding-top: 0;
    }

    .detail-label {
        font-size: 12px;
        color: #666;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.3px;
    }

    .detail-value {
        font-size: 14px;
        color: #333;
        font-weight: 500;
        text-align: right;
    }

    .worker-type-tag {
        display: inline-block;
        background: linear-gradient(135deg, #4d74ea 0%, #6b8ef5 100%);
        color: white;
        padding: 4px 12px;
        border-radius: 12px;
        font-size: 11px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .complaint-text {
        margin-bottom: 15px;
    }

    .complaint-text strong {
        display: block;
        color: #333;
        font-size: 13px;
        margin-bottom: 8px;
    }

    .complaint-text p {
        color: #666;
        font-size: 14px;
        line-height: 1.6;
        margin: 0;
    }

    .timestamps {
        display: flex;
        gap: 20px;
        font-size: 12px;
        color: #999;
        margin-bottom: 15px;
    }

    .current-response {
        background-color: #e7f3ff;
        padding: 15px;
        border-radius: 8px;
        border-left: 4px solid #4d74ea;
        margin-top: 15px;
    }

    .current-response strong {
        display: block;
        color: #4d74ea;
        font-size: 13px;
        margin-bottom: 8px;
    }

    .current-response p {
        color: #333;
        font-size: 14px;
        margin: 0;
        line-height: 1.6;
    }

    .complaint-actions {
        display: flex;
        flex-direction: column;
        gap: 10px;
        min-width: 150px;
    }

    .btn-respond,
    .btn-delete {
        padding: 10px 20px;
        border: none;
        border-radius: 8px;
        font-family: 'Poppins', sans-serif;
        font-size: 14px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
    }

    .btn-respond {
        background-color: #4d74ea;
        color: white;
    }

    .btn-respond:hover {
        background-color: #3d5fd1;
        transform: translateY(-2px);
    }

    .btn-delete {
        background-color: #dc3545;
        color: white;
    }

    .btn-delete:hover {
        background-color: #c82333;
        transform: translateY(-2px);
    }

    .response-form {
        padding: 25px;
        background-color: #f8f9fa;
        border-top: 2px solid #e9ecef;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-group label {
        display: block;
        margin-bottom: 8px;
        color: #333;
        font-weight: 600;
        font-size: 14px;
    }

    .form-group select,
    .form-group textarea {
        width: 100%;
        padding: 12px 15px;
        border: 1px solid #ddd;
        border-radius: 8px;
        font-family: 'Poppins', sans-serif;
        font-size: 14px;
        box-sizing: border-box;
    }

    .form-group select:focus,
    .form-group textarea:focus {
        outline: none;
        border-color: #4d74ea;
    }

    .form-group textarea {
        resize: vertical;
    }

    .form-actions {
        display: flex;
        gap: 10px;
    }

    .btn-save,
    .btn-cancel {
        padding: 10px 24px;
        border: none;
        border-radius: 8px;
        font-family: 'Poppins', sans-serif;
        font-size: 14px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
    }

    .btn-save {
        background-color: #28a745;
        color: white;
    }

    .btn-save:hover {
        background-color: #218838;
    }

    .btn-cancel {
        background-color: #6c757d;
        color: white;
    }

    .btn-cancel:hover {
        background-color: #5a6268;
    }

    .empty-state {
        background: white;
        border-radius: 12px;
        box-shadow: rgba(0, 0, 0, 0.1) 0px 4px 12px;
        padding: 60px 40px;
        text-align: center;
    }

    .empty-state h3 {
        color: #333;
        font-size: 24px;
        margin: 0 0 10px;
    }

    .empty-state p {
        color: #666;
        font-size: 14px;
        margin: 0;
    }

    @media (max-width: 768px) {
        .header-section {
            flex-direction: column;
            gap: 15px;
        }

        .complaint-main {
            flex-direction: column;
        }

        .complaint-actions {
            flex-direction: row;
            min-width: auto;
        }

        .user-worker-info {
            grid-template-columns: 1fr;
        }
    }
</style>

<script>
    function toggleResponse(complaintId) {
        const form = document.getElementById('response-' + complaintId);
        if (form.style.display === 'none') {
            form.style.display = 'block';
        } else {
            form.style.display = 'none';
        }
    }

    function deleteComplaint(complaintId) {
        if (confirm('Are you sure you want to delete this complaint? This action cannot be undone.')) {
            window.location.href = '/admin/delete-complaint?id=' + complaintId;
        }
    }
</script>