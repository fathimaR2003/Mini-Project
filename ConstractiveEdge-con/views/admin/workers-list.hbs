<div class="rootconfirm">
    {{#if list}}
    <div class="heading">
        <p style="font-size: 36px;font-weight: 800;">Workers </p>
        <p id="date" style="color: rgb(72, 72, 72);"></p>
    </div>
    <div class="table">
        <table>
            <thead>
                <tr style="text-align: center;">
                    <th scope="col">No</th>
                    <th scope="col">Worker Profile</th>
                    <th scope="col">Worker Name</th>
                    <th scope="col">Phone Number</th>
                    <th scope="col">Email Address</th>
                    <th scope="col">Worker Type</th>
                    <th scope="col">Worker District</th>
                    <th scope="col">Mannage </th>
                </tr>
            </thead>
            <tbody>
                {{#each list}}
                <tr class="table-row">
                    <td class="" style="display: flex;align-items: center;justify-content: center;">{{@index}}</td>
                    <td>
                        <div id="td">
                            <img src="/workersimage/{{this.wkid}}.jpg" style="width: 40px;" height="40px" alt="">
                        </div>
                    </td>
                    <td>
                        <div id="td">{{this.name}}</div>
                    </td>
                     <td>
                        <div id="td">{{this.ph}}</div>
                    </td>
                    <td>
                        <div id="td">{{this.email}}</div>
                    </td>
                    <td>
                        <div id="td">{{this.district}}</div>
                    </td>
                    <td>
                        <div id="td">{{this.wrktype}}</div>
                    </td>
                    <td><a href="/admin/wkremove?wkid={{this.wkid}}" style="border-radius: 12px;"
                                            class="btn btn-outline-danger"
                                            onclick="return confirm('Are you sure to remove ?')">Remove</a></td></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    {{else}}
    <div id="myDiv"
        style=" width: 100%;text-align: center;display: flex;align-items: center;justify-content: center;flex-direction: column; height: auto;">
    </div>
    {{/if}}
</div>

{{#if list}}
<style>
    .rootconfirm {
        width: 100%;
        min-height: 100vh;
        background-image: url(/design/bg_img.png);
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
        display: flex;
        flex-direction: column;
        align-items: center;
    }
</style>
{{else}}
<style>
    .rootconfirm {
        width: 100%;
        min-height: 100vh;
        background-color: #fff;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    @media screen and (max-width: 768px) {
        .notfound {
            width: 450px;
            height: 400px;
            object-fit: fill;
        }
    }
</style>
{{/if}}

<style>
    #td {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-family: 'Poppins', sans-serif;
    }

    .heading {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: start;
        padding-left: 40px;
        width: 100%;
        height: 90px;
        margin-top: 80px;
    }

    p {
        margin: 0;
        font-family: 'Poppins', sans-serif;
    }

    .table {
        width: 95.5%;
        height: 100%;
        margin-top: 20px;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    table {
        width: 100%;
        color: black;
        height: 100%;
        border-spacing: 12px;
        border-collapse: separate;
    }

    th,
    td {
        padding: 15px 20px;
        text-align: center;
        background-color: white;
        border-radius: 12px;
        box-shadow: rgba(0, 0, 0, 0.05) 0px 6px 24px, rgba(0, 0, 0, 0.08) 0px 0px 1px;
    }

    td img {
        width: 40px;
        height: 40px;
        border-radius: 100%;
    }

    .manage-btns {
        display: flex;
        gap: 12px;
        align-items: center;
        justify-content: center;
    }

    .btn1 {
        color: white;
        padding: 5px;
        border-radius: 12px;
        width: auto;
        height: 30px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 16px;
        text-decoration: none;
        box-shadow: rgba(0, 0, 0, 0.02) 0px 1px 3px, rgba(27, 31, 35, 0.15) 0px 0px 1px;
    }

    .greenbtn {
        background-color: rgb(185, 250, 185);
    }

    .greenbtn:hover {
        background-color: green;
    }

    .redbtn {
        background-color: rgb(255, 198, 198);
    }

    .redbtn:hover {
        background-color: red;
    }

    /* Animation for table rows */
    .table-row {
        opacity: 0;
        transform: translateY(20px);
        transition: opacity 0.5s ease-in-out, transform 0.5s ease-in-out;
    }

    .table-row.show {
        opacity: 1;
        transform: translateY(0);
    }

    #myDiv {
        animation: zoomIn 2s ease-in-out forwards;
    }

    @keyframes zoomIn {
        from {
            transform: scale(0.8);
            opacity: 0;
        }

        to {
            transform: scale(1);
            opacity: 1;
        }
    }
</style>

<script>
    document.getElementById("date").innerHTML = new Date().toDateString();

    window.onload = function () {
        setTimeout(() => {
            document.querySelectorAll('.table-row').forEach((row, index) => {
                setTimeout(() => {
                    row.classList.add('show');
                }, index * 200); // Each row appears 200ms after the previous one
            });
        }, 300); // Small delay before starting animation
    };


</script>

{{#if list}}
{{else}}
<script>
    let img = document.createElement("img");
    img.className = "notfound";
    img.src = "/design/sad.png";
    img.alt = "No Data Found";
    img.style.width = "74%";
    document.getElementById("myDiv").appendChild(img);
</script>
{{/if}}