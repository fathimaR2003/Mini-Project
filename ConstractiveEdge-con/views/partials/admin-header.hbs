<style>
    /* Status Styling */
    #online {
        text-shadow: 0 2px 0 rgba(132, 255, 94, 0.4);
    }

    #offline {
        text-shadow: 0 2px 0 rgba(255, 120, 120, 0.4);
    }

    #online,
    #offline {
        font-family: 'Poppins', sans-serif;
        font-size: 18px;
        margin: 0;
        font-weight: 800;
    }

    .status {
        width: 20%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    /* Navbar Styling */
    .roothd {
        display: flex;
        flex-wrap: wrap;
        padding: 10px;
        align-items: center;
        justify-content: space-around;
        background: transparent;
        z-index: 2;
        position: fixed;
        width: 100%;
        text-align: center;
    }

    .menu-toggle {
        display: none;
        font-size: 24px;
        cursor: pointer;
    }

    .auth {
        display: flex;
        width: 500px;
        align-items: center;
        justify-content: space-around;
    }

    .auth .auth-links {
        display: flex;
        gap: 10px;
    }

    .nav-link {
        font-size: 15px;
        color: rgb(73, 73, 73);
    }

    /* Responsive Menu */
    @media screen and (max-width: 768px) {
        .sessions {
            display: none;
            flex-direction: column;
            width: 100%;
            position: absolute;
            top: 60px;
            left: 0;
            background: rgba(255, 255, 255, 0.9);
            text-align: center;
            padding: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease-in-out;
            /* Smooth transition */
        }

        .sessions.active {
            display: flex;
        }

        .menu-toggle {
            display: block;
        }
    }

    a {
        font-family: 'Poppins', sans-serif;
    }
</style>

<script>
    function toggleMenu() {
        const menu = document.querySelector('.sessions');
        menu.classList.toggle('active');  // Toggle only 'active' class
    }

    function hideMenu() {
        document.querySelector('.sessions').classList.remove('active'); // Hide when mouse leaves
    }
</script>