<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<div style="width: 100%;min-height: 100vh;display: flex;flex-direction: column;align-items: center;">
    <div class="banner pt-1" style="position: fixed;z-index: 2;margin-top: 70px;">
        <h1 class="banner-title" style="font-size: 45px; font-family: 'Poppins', sans-serif;">Find Your Best Partner
        </h1>
        <div class="search-box">
            <div class="search-input">
                <i class="fas fa-search"></i>
                <input type="text" id="searchText" placeholder="Search for Job Posting">
                <div id="searchresult" class="search-dropdown"></div>
            </div>
            <select id="district" class="select-box">
                <option value="">Set Location (All Kerala)</option>
                <option value="alappuzha">Alappuzha</option>
                <option value="ernakulam">Ernakulam</option>
                <option value="idukki">Idukki</option>
                <option value="kannur">Kannur</option>
                <option value="kasaragod">Kasargod</option>
                <option value="kollam">Kollam</option>
                <option value="kottayam">Kottayam</option>
                <option value="kozhikode">Kozhikode</option>
                <option value="malappuram">Malappuram</option>
                <option value="palakkad">Palakkad</option>
                <option value="pathanamthitta">Pathanamthitta</option>
                <option value="thiruvananthapuram">Thiruvananthapuram</option>
                <option value="thrissur">Thrissur</option>
                <option value="wayanad">Wayanad</option>
            </select>
            <button class="search-btn" onclick="filterWorkers()"><i class="fa fa-search"></i></button>
        </div>
    </div>
    <div id="root" style="background-image: url(/design/bg_img.png);" class="pt-5 mt-5">
        <div class="d" id="worker-list">
            {{#each workers}}
            <div class="worker-card mt-3" data-wrktype="{{this.wrktype}}" data-district="{{this.district}}">
                <div class="card">
                    <div style="display: flex;width: 100%;justify-content: space-between;">
                        <div style="display: flex;align-items: center;">
                            <img class="card-img-top" src="/workersimage/{{this.wkid}}.jpg" alt="Worker Image">

                            <div class="ml-3" style=" width: 100%;">
                                <h5 class="card-title" style="margin: 0;"><b></b> {{this.name}}</h5>
                                <div style="display: flex;gap: 20px;">
                                    <p style="font-size: 13px;margin: 0;color: rgb(104, 104, 104);" class="card-title">
                                        Profession : {{this.wrktype}}</p>
                                    <p style="font-size: 13px;margin: 0;color: rgb(104, 104, 104);" class="card-title">
                                        District : {{this.district}}</p>
                                </div>
                                <div class="">
                                    {{#if this.five}} ⭐⭐⭐⭐⭐ {{/if}}
                                    {{#if this.four}} ⭐⭐⭐⭐☆ {{/if}}
                                    {{#if this.three}} ⭐⭐⭐☆☆ {{/if}}
                                    {{#if this.two}} ⭐⭐☆☆☆ {{/if}}
                                    {{#if this.one}} ⭐☆☆☆☆ {{/if}}
                                </div>
                                <p style="font-size: 13px;margin: 0;" class="card-title">Description: </p>
                                <p
                                    style="width: 7cm; font-size: 13px; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;">
                                    {{this.description}}</p>
                            </div>
                        </div>
                        <div>
                            <div class=" mt-2"
                                style=" display: flex; flex-direction: column;justify-content: center;align-items: end;">
                                {{#if this.wkingstatus}}
                                <div class=" mt-3">
                                    <a href="/morewkinfo?id={{this.wkid}}" class="btn text-dark"
                                        style="display: flex;justify-items: center;align-items: center;gap: 5px; border-radius: 12px; font-weight: 800; font-size: 14px;background-color: rgb(169, 227, 169);">More
                                        Info
                                        <img style="width: 12px;height: 12px;" src="/design/arrow_icon.svg" alt="">
                                    </a>
                                    <span style="font-size: 10px;color:rgb(141, 141, 141)">this worker now
                                        available</span>
                                </div>
                                {{else}}
                                <div class=" mt-3">
                                    <span style="font-size: 10px;color:rgb(141, 141, 141)">this worker not
                                        available</span>
                                </div>
                                {{/if}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>

<script>
    const allWorkers = document.querySelectorAll('.worker-card');
    const searchInput = document.getElementById("searchText");
    const districtSelect = document.getElementById("district");

    function filterWorkers() {
        const searchValue = searchInput.value.toLowerCase();
        const selectedDistrict = districtSelect.value.toLowerCase();

        allWorkers.forEach(worker => {
            const wrktype = worker.getAttribute("data-wrktype").toLowerCase();
            const district = worker.getAttribute("data-district").toLowerCase();

            if (
                (searchValue === "" || wrktype.includes(searchValue)) &&
                (selectedDistrict === "" || district === selectedDistrict)
            ) {
                worker.style.display = "block";
            } else {
                worker.style.display = "none";
            }
        });
    }

    searchInput.addEventListener("input", filterWorkers);
    districtSelect.addEventListener("change", filterWorkers);
</script>

