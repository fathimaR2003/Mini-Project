<div class="rootconfirm">
    {{#if list}}
    <div class="heading">
        <p style="font-size: 36px;font-weight: 800;">Work history </p>
        <p id="date" style="color: rgb(72, 72, 72);"></p>
    </div>

    <div class="table">
        <table>
            <thead>
                <tr style="text-align: center;">
                    <th scope="col">No</th>
                    <th scope="col">Worker's Name</th>
                    <th scope="col">Worker's Email</th>
                    <th scope="col">Phone Number</th>
                    <th scope="col">Type</th>
                    <th scope="col">District</th>
                    <th scope="col">Start Date</th>
                    <th scope="col">End Date</th>
                </tr>
            </thead>
            <tbody>
                {{#each list}}
                {{#if this.workers}}
                {{#if this.endstatus}}
                <tr>
                    <td>{{@index}}</td>
                    <td>{{this.workers.name}}</td>
                    <td>{{this.workers.email}}</td>
                    <td>{{this.workers.ph}}</td>
                    <td>{{this.workers.wrktype}}</td>
                    <td>{{this.workers.district}}</td>
                    <td>{{this.starting}}</td>
                    <td>{{this.ending}}</td>
                </tr>
                {{/if}}
                {{/if}}
                {{/each}}


            </tbody>
        </table>
    </div>
    {{else}}
    <div id="myDiv"
        style=" width: 100%;text-align: center;display: flex;align-items: center;justify-content: center;flex-direction: column;">
    </div>
    {{/if}}
</div>

{{#if list}}
<style>
    .rootconfirm {
        background-image: url(/design/bg_img.png);
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
        width: 100%;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
    }
</style>
{{else}}
<style>
    .rootconfirm {
        width: 100%;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }
</style>
{{/if}}

<style>
    .heading {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: start;
        padding-left: 40px;
        width: 100%;
        height: 90px;
        margin-top: 80px;
    }

    p {
        margin: 0;
        font-family: 'Poppins', sans-serif;
    }

    .table {
        width: 95.5%;
        height: 100%;
        margin-top: 20px;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    table {
        width: 100%;
        color: black;
        height: 100%;
        border-spacing: 12px;
        /* Adds space between table cells */
        border-collapse: separate;
    }

    th,
    td {
        padding: 15px 20px;
        /* Ensures spacing inside table cells */
        text-align: center;
        background-color: white;
        /* Keeps text readable */
        border-radius: 12px;
        box-shadow: rgba(0, 0, 0, 0.05) 0px 6px 24px, rgba(0, 0, 0, 0.08) 0px 0px 1px;
    }

    td img {
        width: 40px;
        height: 40px;
        border-radius: 100%;
    }

    .manage-btns {
        display: flex;
        gap: 12px;
        align-items: center;
        justify-content: center;
    }

    .btn {
        color: white;
        border-radius: 100%;
        width: 30px;
        height: 30px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 16px;
        text-decoration: none;
        box-shadow: rgba(0, 0, 0, 0.02) 0px 1px 3px, rgba(27, 31, 35, 0.15) 0px 0px 1px;
    }

    .greenbtn {
        background-color: rgb(185, 250, 185);
        ;
    }

    .greenbtn:hover {
        background-color: green;
    }

    .redbtn {
        background-color: rgb(255, 198, 198);
    }

    .redbtn:hover {
        background-color: red;
    }
</style>

<script>
    document.getElementById("date").innerHTML = new Date().toDateString();
</script>

{{#if list}}

{{else}}
<script>



    let img = document.createElement("img"); // Create an image element
    img.src = "/design/emty.gif"; // Set the image source
    img.alt = "Description"; // Add alternative text
    img.style.width = "900px"; // Set width (optional)
    img.style.width = "900px";

    document.getElementById("myDiv").appendChild(img); // Append to div

</script>
{{/if}}