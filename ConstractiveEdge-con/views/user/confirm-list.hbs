        align-items: center;

    }
</style>
{{else}}
<style>
    .rootconfirm {
        width: 100%;
        min-height: 100vh;
        background-color: #fff;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }
</style>
{{/if}}

<style>
    .heading {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: start;
        padding-left: 40px;
        width: 100%;
        height: 90px;
        margin-top: 80px;
    }

    p {
        margin: 0;
        font-family: 'Poppins', sans-serif;
    }

    .table {
        width: 95.5%;
        height: 100%;
        margin-top: 20px;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    table {
        width: 100%;
        color: black;
        height: 100%;
        border-spacing: 12px;
        /* Adds space between table cells */
        border-collapse: separate;
    }

    th,
    td {
        padding: 15px 20px;
        /* Ensures spacing inside table cells */
        text-align: center;
        background-color: white;
        /* Keeps text readable */
        border-radius: 12px;
        box-shadow: rgba(0, 0, 0, 0.05) 0px 6px 24px, rgba(0, 0, 0, 0.08) 0px 0px 1px;
    }

    td img {
        width: 40px;
        height: 40px;
        border-radius: 100%;
    }

    .manage-btns {
        display: flex;
        gap: 12px;
        align-items: center;
        justify-content: center;
    }

    .btn {
        color: white;
        border-radius: 100%;
        width: 30px;
        height: 30px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 16px;
        text-decoration: none;
        box-shadow: rgba(0, 0, 0, 0.02) 0px 1px 3px, rgba(27, 31, 35, 0.15) 0px 0px 1px;
    }

    .greenbtn {
        background-color: rgb(185, 250, 185);
        ;
    }

    .greenbtn:hover {
        background-color: green;
    }

    .redbtn {
        background-color: rgb(255, 198, 198);
    }

    .redbtn:hover {
        background-color: red;
    }

    h1 {
        font-family: 'Poppins', sans-seri;
    }
</style>

<script>
    document.getElementById("date").innerHTML = new Date().toDateString();
</script>

