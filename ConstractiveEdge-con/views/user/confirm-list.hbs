<div class="rootconfirm">
    {{#if list}}
    <div class="heading">
        <p style="font-size: 36px;font-weight: 800;">Confirm </p>
        <p id="date" style="color: rgb(72, 72, 72);"></p>
    </div>
    <div class="table">
        <table>
            <thead>
                <tr style="text-align: center;">
                    <th scope="col">No</th>
                    <th scope="col">Worker Profile</th>
                    <th scope="col">Worker Name</th>
                    <th scope="col">Phone Number</th>
                    <th scope="col">Email Address</th>
                    <th scope="col">Worker Type</th>
                    <th scope="col">Worker District</th>
                    <th scope="col">Manage Request</th>
                </tr>
            </thead>
            <tbody>
                {{#each list}}
                <tr class="">z
                    <td>{{@index}}</td>
                    <td>
                        <img src="/workersimage/{{this.workers.wkid}}.jpg" alt="Worker Image">
                    </td>
                    <td>{{this.workers.name}}</td>
                    <td>{{this.workers.ph}}</td>
                    <td>{{this.workers.email}}</td>
                    <td>{{this.workers.wrktype}}</td>
                    <td>{{this.workers.district}}</td>
                    <td class="manage-btns">
                        <a href="/acceptconfirm?wkid={{this.workers.wkid}}&type={{this.workers.wrktype}}"
                            class="btn greenbtn">&#10004;</a>
                        <a href="/removeconfirm?wkid={{this.workers.wkid}}" class="btn redbtn"
                            onclick="return confirm('Are you sure to remove?')">&#10006;</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    {{else}}
    <div id="myDiv"
        style="width: 100%;text-align: center;display: flex;align-items: center;justify-content: center;flex-direction: column; height: auto;">
    </div>
    {{/if}}
</div>
{{#if list}}
<style>
    .rootconfirm {
        width: 100%;
        min-height: 100vh;
        background-image: url(/design/bg_img.png);
