<div class="rootconfirm">
    <div class="heading">
        <p id="title" style="font-size: 36px;font-weight: 800;">Worker Activities </p>
        <p id="date" style="color: rgb(72, 72, 72);"></p>
    </div>
    <div class="cards">
        {{#if list}}
        {{#each list}}
        {{#if this.status}}
        <div class="ccard">
            <div class="profile" style=" display: flex;justify-content: space-between;">
                <img src="/workersimage/{{this.workers.wkid}}.jpg" alt="" style="width: 100%;height: 170px;">
            </div>
            <div class="workerinfo">
                <p style="font-size: 20px;font-weight: 600;">Worker <i>{{this.workers.name}}</i> Detailed Information
                </p>
                <div class="mt-2"
                    style="font-size:13px; width: 100%;display: flex;align-items: center;justify-content: space-evenly;">
                    <p>{{this.workers.wrktype}}</p>
                    <p>{{this.workers.email}}</p>
                </div>
                <div
                    style="font-size:13px;width: 100%;display: flex;align-items: center;justify-content: space-evenly;">
                    <p>+91 {{this.workers.ph}}</p>
                    <p>{{this.workers.district}}</p>
                </div>
                <p style="font-size:13px;">{{this.starting}}</p>

            </div>
        </div>
        {{/if}}
        {{/each}}
        {{else}}
        <div id="myDiv" style="width: 100%;text-align: center;display: flex;align-items: center;justify-content: center;"></div>
        {{/if}}
    </div>
</div>

<style>
    #feedbacksubmission {
        width: 100%;
        height: 40px;
        font-family: 'Poppins', sans-serif;
        border-radius: 50px;
        border: none;
        background: linear-gradient(90deg, #007BFF, #00A8FF);
        color: #ffffff;
        text-decoration: none;
    }

    .subbmit {
        width: 100%;
    }

    .moving-arrow {
        font-size: 30px;
        margin: 0;
        margin-bottom: 9px;
        display: inline-block;
        position: relative;
        animation: shakeArrow 0.5s infinite alternate ease-in-out;
    }

    .imagefeedbaack {
        width: 100%;
        text-align: center;
        display: flex;
        flex-direction: column;
        gap: 3px;
        overflow-y: hidden;
    }

    .imagefeedbaack::-webkit-scrollbar {
        display: none;
    }

    .feedback {
        width: 100%;
        text-align: center;
        font-family: 'Poppins', sans-serif;
    }

    .workerinfo {
        width: 100%;
        text-align: center;
        display: flex;
        flex-direction: column;
        gap: 5px;
    }

    img {
        border-radius: 12px;
    }

    .index {
        font-size: 40px;
        font-weight: 800;
    }

    label {
        font-family: 'Poppins', sans-serif;
    }

    p {
        font-family: 'Poppins', sans-serif;
        margin: 0;
    }

    .rootconfirm {
        width: 100%;
        min-height: 100vh;
        background-image: url(/design/bg_img.png);
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .heading {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: start;
        padding-left: 40px;
        width: 100%;
        height: 90px;
        margin-top: 80px;
    }

    p {
        margin: 0;
        font-family: 'Poppins', sans-serif;
    }

    #feedbackform {
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-wrap: wrap;
        gap: 10px;
        margin: 0;
    }


    .cards {
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-wrap: wrap;
        gap: 30px;
        padding: 20px;
        padding-top: 25px;
    }

    .ccard {
        width: 20rem;
        height: auto;
        border-radius: 25px;
        box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
        padding: 40px;
        display: flex;
        flex-direction: column;
        gap: 10px;
        /* Initially Hidden */
        opacity: 0;
        transform: translateY(20px);
        transition: opacity 2s ease, transform 4s ease;
    }

    .custom-select {
        width: 30%;
        height: 40px;
        border: 1px solid #007BFF;
        /* Primary color border */
        border-radius: 5px;
        /* Smooth corners */
        background-color: #f8f9fa;
        /* Light background */
        color: #007BFF;
        /* Primary color text */
        font-weight: 600;
        text-align: center;
        cursor: pointer;
        appearance: none;
        /* Remove default browser styling */
        padding: 5px 10px;
        transition: 0.3s ease-in-out;
    }

    .custom-select:hover {
        background-color: #ffffff;
        /* Primary color on hover */
        color: black;
        /* White text on hover */
    }

    .custom-select:focus {
        outline: none;
        border-color: #0056b3;
        /* Darker blue focus border */
        box-shadow: 0px 0px 5px rgba(0, 123, 255, 0.5);
    }

    /* Show animation class */
    .ccard.show {
        opacity: 1;
        transform: translateY(0);
    }

    @media screen and (max-width: 768px) {
        .heading {
            align-items: center;
            text-align: center;
            padding-left: 0;
            margin-top: 107px;
        }

        #title {
            font-size: 24px !important;
        }

        #date {
            font-size: 11px !important;
        }

    }

    @keyframes shakeArrow {
        0% {
            transform: translateX(5px);
            /* Slight move to right */
        }

        100% {
            transform: translateX(-5px);
            /* Slight move to left */
        }
    }
</style>

