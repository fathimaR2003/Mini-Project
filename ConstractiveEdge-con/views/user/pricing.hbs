{{>user-header}}

<div class="pricing-container">
    <div class="pricing-header">
        <h1>üí∞ Work Type Pricing</h1>
        <p class="subtitle">View transparent pricing for all types of work services</p>
    </div>

    {{#if workPrices}}
    <div class="pricing-grid">
        {{#each workPrices}}
        <div class="pricing-card">
            <div class="card-header">
                <h3>{{this.workType}}</h3>
                <span class="work-badge">Professional Service</span>
            </div>
            
            <div class="pricing-details">
                <div class="price-item daily">
                    <div class="price-icon">üìÖ</div>
                    <div class="price-info">
                        <span class="price-label">Daily Rate</span>
                        <span class="price-value">‚Çπ{{this.dailyRate}}</span>
                        <span class="price-hint">Per full day (8 hours)</span>
                    </div>
                </div>
                
                <div class="price-item hourly">
                    <div class="price-icon">‚è∞</div>
                    <div class="price-info">
                        <span class="price-label">Hourly Rate</span>
                        <span class="price-value">‚Çπ{{this.hourlyRate}}</span>
                        <span class="price-hint">Per hour</span>
                    </div>
                </div>
            </div>

            {{#if this.description}}
            <div class="description-section">
                <div class="description-header">
                    <span class="desc-icon">üìù</span>
                    <span class="desc-title">Description</span>
                </div>
                <p class="description-text">{{this.description}}</p>
            </div>
            {{/if}}

            <div class="card-footer">
                <a href="/services" class="btn-hire">Find {{this.workType}}s</a>
            </div>
        </div>
        {{/each}}
    </div>
    {{else}}
    <div class="no-pricing">
        <div class="no-pricing-icon">üì≠</div>
        <h2>No Pricing Information Available</h2>
        <p>Pricing details for work types will be displayed here once they are set by the administrator.</p>
        <a href="/services" class="btn-back">Browse Services</a>
    </div>
    {{/if}}
</div>

<style>
    body {
        font-family: 'Poppins', sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f5f7fa;
    }

    .pricing-container {
        min-height: 100vh;
        padding: 100px 20px 40px;
        max-width: 1400px;
        margin: 0 auto;
    }

    .pricing-header {
        text-align: center;
        margin-bottom: 50px;
    }

    .pricing-header h1 {
        color: #4d74ea;
        font-size: 42px;
        margin: 0 0 15px 0;
        font-weight: 700;
    }

    .subtitle {
        color: #666;
        font-size: 18px;
        margin: 0;
        font-weight: 400;
    }

    /* Pricing Grid */
    .pricing-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(380px, 1fr));
        gap: 30px;
        animation: fadeIn 0.5s ease-in;
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Pricing Card */
    .pricing-card {
        background: white;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        border: 2px solid transparent;
    }

    .pricing-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 12px 40px rgba(77, 116, 234, 0.2);
        border-color: #4d74ea;
    }

    /* Card Header */
    .card-header {
        background: linear-gradient(135deg, #4d74ea 0%, #6b8ef5 100%);
        padding: 25px;
        text-align: center;
    }

    .card-header h3 {
        color: white;
        font-size: 26px;
        margin: 0 0 10px 0;
        font-weight: 700;
        text-transform: capitalize;
    }

    .work-badge {
        display: inline-block;
        background: rgba(255, 255, 255, 0.2);
        color: white;
        padding: 5px 15px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    /* Pricing Details */
    .pricing-details {
        padding: 30px 25px;
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .price-item {
        display: flex;
        align-items: center;
        gap: 20px;
        padding: 20px;
        border-radius: 12px;
        transition: all 0.3s;
    }

    .price-item.daily {
        background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
        border-left: 5px solid #2196f3;
    }

    .price-item.hourly {
        background: linear-gradient(135deg, #f3e5f5 0%, #e1bee7 100%);
        border-left: 5px solid #9c27b0;
    }

    .price-item:hover {
        transform: translateX(5px);
    }

    .price-icon {
        font-size: 36px;
        flex-shrink: 0;
    }

    .price-info {
        display: flex;
        flex-direction: column;
        flex: 1;
    }

    .price-label {
        font-size: 14px;
        color: #666;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 5px;
    }

    .price-value {
        font-size: 32px;
        font-weight: 800;
        color: #333;
        margin-bottom: 3px;
    }

    .price-hint {
        font-size: 12px;
        color: #888;
        font-style: italic;
    }

    /* Description Section */
    .description-section {
        padding: 0 25px 20px;
    }

    .description-header {
        display: flex;
        align-items: center;
        gap: 10px;
        margin-bottom: 10px;
    }

    .desc-icon {
        font-size: 20px;
    }

    .desc-title {
        font-size: 14px;
        font-weight: 700;
        color: #4d74ea;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .description-text {
        color: #555;
        font-size: 14px;
        line-height: 1.6;
        margin: 0;
        padding: 15px;
        background: #f8f9fa;
        border-radius: 8px;
        border-left: 3px solid #4d74ea;
    }

    /* Card Footer */
    .card-footer {
        padding: 0 25px 25px;
    }

    .btn-hire {
        display: block;
        width: 100%;
        padding: 14px;
        background: linear-gradient(135deg, #28a745 0%, #34ce57 100%);
        color: white;
        text-align: center;
        text-decoration: none;
        border-radius: 10px;
        font-weight: 700;
        font-size: 15px;
        transition: all 0.3s;
        box-shadow: 0 4px 15px rgba(40, 167, 69, 0.2);
    }

    .btn-hire:hover {
        background: linear-gradient(135deg, #218838 0%, #28a745 100%);
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(40, 167, 69, 0.3);
    }

    /* No Pricing State */
    .no-pricing {
        text-align: center;
        padding: 80px 20px;
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    }

    .no-pricing-icon {
        font-size: 80px;
        margin-bottom: 20px;
    }

    .no-pricing h2 {
        color: #333;
        font-size: 28px;
        margin: 0 0 15px 0;
        font-weight: 700;
    }

    .no-pricing p {
        color: #666;
        font-size: 16px;
        margin: 0 0 30px 0;
        max-width: 500px;
        margin-left: auto;
        margin-right: auto;
    }

    .btn-back {
        display: inline-block;
        padding: 12px 30px;
        background: linear-gradient(135deg, #4d74ea 0%, #6b8ef5 100%);
        color: white;
        text-decoration: none;
        border-radius: 8px;
        font-weight: 600;
        font-size: 15px;
        transition: all 0.3s;
    }

    .btn-back:hover {
        background: linear-gradient(135deg, #3d5fd1 0%, #5a7de6 100%);
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(77, 116, 234, 0.3);
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        .pricing-container {
            padding: 80px 15px 30px;
        }

        .pricing-header h1 {
            font-size: 32px;
        }

        .subtitle {
            font-size: 16px;
        }

        .pricing-grid {
            grid-template-columns: 1fr;
            gap: 20px;
        }

        .card-header h3 {
            font-size: 22px;
        }

        .price-value {
            font-size: 28px;
        }

        .price-icon {
            font-size: 30px;
        }
    }

    @media (max-width: 480px) {
        .pricing-header h1 {
            font-size: 28px;
        }

        .price-item {
            padding: 15px;
        }

        .price-value {
            font-size: 24px;
        }
    }
</style>